   $(document).ready(function() {
    $("#lovedTracks").nowPlaying({
     display:"lovedTracks"
    });
    
    $("#topTracks").nowPlaying({
     display:"topTracks"
    });
    
    $("#recentTracks").nowPlaying({
     display:"recentTracks",
     username:'rxcjack'
    });
    
